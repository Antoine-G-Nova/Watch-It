{% extends 'base.html.twig' %}

{% block title %}{Catégories}{% endblock %}

{% block body %}
<div class="category-wrapper mt-5">
    <h3 class="mb-2 text-center text-light">Choisissez une catégories : </h3>
    <div class="container-fluid pt-4 px-4 justify-content-center row">
        {% for genre in genres %}
        <div class="col-11 col-sm-5 col-md-4 col-lg-3 col-xl-2 m-2 border rounded bg-darker">
            <div class="m-2 text-center"><a href="{{ path('film_category', { id : genre.id })}}" class="text-light"> <span class="font-weight-bold text-warning cat-name h3">{{genre.name}}</span> <br>  ({{genre.movies|length}})</a> </div>
        </div>
            
        

        {% endfor %}
    </div>
</div>

{% endblock %}