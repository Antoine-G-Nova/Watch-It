{% extends 'base.html.twig' %}

{% block title %}{{ films_data|first.name }}{% endblock %}

{% block body %}
<div class="pt-5 wrapper mx-auto">

    <h3 class="text-center font-weight-bold text-dark bg-warning border-top border-right border-left border-dark rounded-top shadow  ml-0 mb-0" id="cat-title">{{
        films_data|first.name }} :</h3>

    <div class="row justify-content-center justify-content-md-around rounded bg-darker pt-4">

        {% for film in films_data %}

        <div class="col-6 col-sm-4 col-md-3 col-xl-2 my-2 my-md-4 mx-4 p-0 text-center film-card">
            <a href=" {{ path('film_show', { slug : film.slug })}} ">
                <img src=" {{ film.image }} " alt="..." class="scale rounded-lg shadow-lg" style="width: 230px">
            </a>
            <h5 class="text-light"> {{ film.title }} </h5>
        </div>

        {% endfor %}

        {# display navigation #}
    </div>
    
    <div class="navigation mt-3">
        {{ knp_pagination_render(films_data) }}
    </div>

</div>

{% endblock %}