{% extends 'base.html.twig' %}

{% block nav %}
    {% include 'admin_home/admin_nav.html.twig' %}
{% endblock %}

{% block body %}

    <h2 class="text-center text-light mt-5">
        Liste des teams
        <a href="{{ path('admin_team_add') }}" class="btn btn-success"><i class="fas fa-edit"></i> Cr√©er nouveau</a>
    </h2>
<div class="container bg-light mt-5 px-0 rounded">
    <table class="table table-striped">
        <thead>
            <tr >
                <th>Nom personne</th>
                <th class="text-center">Job</th>
                <th class="pr-3 text-right">Supprimer/Modifier</th>
            </tr>
        </thead>
        <tbody>
        {% for team in teams_data %}
            <tr class="">
                <td class="w-25 pl-3">{{ team.person.name }}</td>
                <td class="w-50 text-center">{{ team.job.name }}</td>
                <td>
                    <a href="{{ path('admin_team_edit', { id : team.id }) }}" class="float-right ml-1">
                        Editer
                        <i class="fas fa-edit "></i>
                    </a>
                    <a href="{{ path('admin_team_delete', { id : team.id }) }}" class="float-right text-danger">
                        Supprimer
                        <i class="fas fa-trash-alt"></i>
                    </a>
                    
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>
<div class="container p-0">
    <a href="{{ path('admin_film_list') }}" class="btn btn-info">Retour</a>
</div>

{# flash message #}
{% for label, messages in app.flashes %}
        {% for message in messages %}
            <div class="alert alert-{{label}} mt-2 font-weight-bold position-fixed animated bounceOutRight delay-2s">
                {{ message }}
            </div>
        {% endfor %}
{% endfor %}
{% endblock %}