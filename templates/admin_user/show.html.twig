{% extends 'base.html.twig' %}

{% block nav %}
    {% include 'admin_home/admin_nav.html.twig' %}
{% endblock %}

{% block title %}User{% endblock %}

{% block body %}
<h1 class="text-light text-center mt-5">Utilisateur</h1>
<div class="container bg-light mt-5 px-0 rounded">
    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ user.id }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ user.email }}</td>
            </tr>
            <tr>
                <th>Username</th>
                <td>{{ user.username }}</td>
            </tr>
            <tr>
                <th>Roles</th>
                <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('user_index') }}" class="btn btn-dark m-2">Retour</a>

    <a href="{{ path('user_edit', {'id': user.id}) }}" class="btn btn-success">Editer</a>

</div>
<div class="container d-flex justify-content-end p-1 pt-2">
    {{ include('admin_user/_delete_form.html.twig') }}
</div>
{% endblock %}